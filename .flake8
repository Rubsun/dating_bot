[flake8]
exclude =
    .git,
    __pycache__,
    .venv,
    build,
    dist,
    *.egg-info,
    docs/,

max-line-length = 150

ignore = F811

# Выборочное включение ошибок (если ignore используется слишком широко)
# select = E,W,F

# Не проверять неиспользуемые импорты в __init__.py файлах
per-file-ignores =
    __init__.py: F401